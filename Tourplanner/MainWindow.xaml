<Window x:Class="Tourplanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tourplanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Label>Tour Planner</Label>
            <Button Grid.Column="0" Grid.Row="1">File</Button>
            <Button Grid.Column="1" Grid.Row="1">Edit</Button>
            <Button Grid.Column="2" Grid.Row="1">Options</Button>
            <Button Grid.Column="3" Grid.Row="1"></Button>
            <Button Grid.Column="4" Grid.Row="1"></Button>
            <Button Grid.Column="5" Grid.Row="1">Help</Button>
        </Grid>
    </Grid>
</Window>
